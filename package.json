{
  "name": "claude-orchestrator-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:ui && bun run build:orchestrator",
    "build:ui": "cd packages/orchestrator-ui && bun run build",
    "build:orchestrator": "cd apps/orchestrator && bun run build",
    "build:release": "cd apps/orchestrator && bun run build:release",
    "dev": "cd apps/orchestrator && bun run dev",
    "dev:ui": "cd packages/orchestrator-ui && bun run dev",
    "clean": "rm -rf apps/orchestrator/dist packages/orchestrator-ui/dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}
